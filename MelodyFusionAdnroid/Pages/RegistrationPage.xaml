<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MelodyFusionAdnroid.Pages.RegistrationPage"
             Title="RegistrationPage">
    <VerticalStackLayout>
        <Label Text="Регистрация" FontSize="24" HorizontalOptions="Center" Margin="0,20,0,10"/>

        <Entry x:Name="firstNameEntry" Placeholder="Имя" Margin="0,10,0,10"/>
        <Entry x:Name="lastNameEntry" Placeholder="Фамилия" Margin="0,0,0,10"/>
        <Entry x:Name="userNameEntry" Placeholder="Имя пользователя" Margin="0,0,0,10"/>
        <Entry x:Name="emailEntry" Placeholder="Email" Margin="0,0,0,10"/>
        <Entry x:Name="passwordEntry" Placeholder="Пароль" IsPassword="True" Margin="0,0,0,10"/>


        <Button Text="Зарегистрироваться" Clicked="RegClicked" HorizontalOptions="FillAndExpand" Margin="0,20,0,0"/>
        
        
    </VerticalStackLayout>
</ContentPage>