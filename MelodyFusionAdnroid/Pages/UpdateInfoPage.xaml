<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MelodyFusionAdnroid.ViewModels"
             xmlns:local="clr-namespace:MelodyFusionAdnroid.Models"
             x:Class="MelodyFusionAdnroid.Pages.UpdateInfoPage"
             Title="UpdateInfoPage">
    <VerticalStackLayout>
        <Label 
            Text="Please change the user data and click Save button"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="firstNameF" Text ="{Binding FirstName}" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>

        <Entry x:Name="lastNameT" Text="{Binding LastName}" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>

        <Entry x:Name="EmailT" Text="{Binding Email}" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>

        <Entry x:Name="userNameT" Text="{Binding UserName}" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>

        <Button Text="Save" Clicked="UpdateDataClicked" HorizontalOptions="FillAndExpand" Margin="0,20,0,0"/>

    </VerticalStackLayout>
</ContentPage>