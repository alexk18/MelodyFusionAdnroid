<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MelodyFusionAdnroid.Pages.UpdatePasswortPage"
             Title="UpdatePasswortPage">
    <VerticalStackLayout>
        <Label 
            Text="To change your password, enter your old password and new password, then click the update button!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="OldPass" Placeholder="Old Password" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>

        <Entry x:Name="NewPass" Placeholder="New Password" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>

        <Button Text="Save" Clicked="UpdatePasswordClicked" HorizontalOptions="FillAndExpand" Margin="0,20,0,0"/>
        
    </VerticalStackLayout>
</ContentPage>